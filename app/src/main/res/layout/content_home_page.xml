<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomePage"
    tools:showIn="@layout/activity_home_page">

    <Button
        android:id="@+id/Food.Main"
        android:layout_width="292dp"
        android:layout_height="64dp"
        android:layout_marginBottom="20dp"
        android:text="Food"
        app:layout_constraintBottom_toTopOf="@+id/Exercise.Main"
        app:layout_constraintTop_toBottomOf="@+id/BGL.Main"
        tools:layout_editor_absoluteX="46dp" />

    <Button
        android:id="@+id/Exercise.Main"
        android:layout_width="292dp"
        android:layout_height="64dp"
        android:layout_marginBottom="20dp"
        android:text="Exercise"
        app:layout_constraintBottom_toTopOf="@+id/Data.Main"
        app:layout_constraintTop_toBottomOf="@+id/Food.Main"
        tools:layout_editor_absoluteX="46dp" />

    <Button
        android:id="@+id/Data.Main"
        android:layout_width="292dp"
        android:layout_height="64dp"
        android:layout_marginBottom="20dp"
        android:text="Data"
        app:layout_constraintBottom_toTopOf="@+id/Medicine.Main"
        app:layout_constraintTop_toBottomOf="@+id/Exercise.Main"
        tools:layout_editor_absoluteX="46dp" />

    <Button
        android:id="@+id/Medicine.Main"
        android:layout_width="292dp"
        android:layout_height="64dp"
        android:text="Medicine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Data.Main"
        tools:layout_editor_absoluteX="46dp" />

    <Button
        android:id="@+id/BGL.Main"
        android:layout_width="292dp"
        android:layout_height="67dp"
        android:layout_marginBottom="20dp"
        android:text="BGL"
        app:layout_constraintBottom_toTopOf="@+id/Food.Main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:layout_editor_absoluteX="46dp" />

    <TextView
        android:id="@+id/Title.Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health Tracker"
        android:textAppearance="@android:style/TextAppearance.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

</android.support.constraint.ConstraintLayout>